---
interface Props  {
	title: string;
}

const { title } = Astro.props ;

import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
	  margin: 0;
	  width: 100%;
	  height: 100%;
	  background: var(--color-theme-dark);
	  color: var(--color-theme-pearl-bush);
	  display: flex;
	  flex-direction: column;
	}
</style>