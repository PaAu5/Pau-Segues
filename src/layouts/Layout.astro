---
interface Props  {
	title: string;
}

const { title } = Astro.props ;

import Footer from "@/sections/footer.astro"
import Header from "@/sections/header.astro";

import "@/styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<main>
			<slot />
		</main>
		<Footer/>
	</body>
</html>

<style>
	html,
	body {
	  margin: 0;
	  width: 100%;
	  height: 100%;
	  background: var(--color-theme-pearl-blue);
	  color: var(--color-theme-mirage);
	  display: flex;
	  flex-direction: column;
	}
</style>