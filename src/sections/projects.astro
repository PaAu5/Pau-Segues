---
import { PROJECTS } from '@/consts/projects'

import ProjectCard from "@/components/project-card.astro"
---
<section class="flex flex-col justify-center items-center my-24" id="projects">
    <div>
        <h2 class="text-2xl font-bold">
            Projects on I had been worked
        </h2>
    </div>
    <div class={`${PROJECTS.length < 3 ? 'flex justify-center' : 'grid grid-cols-3 gap-4'} space-x-4 space-y-4 mt-8`}>
        {
            PROJECTS.map(({title, text, url, image}) =>
                <ProjectCard
                    title={title}
                    text={text}
                    url={url}
                    image={image}
                />
            )
        }
    </div>
</section>